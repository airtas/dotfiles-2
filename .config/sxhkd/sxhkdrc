#     ▌ ▌  ▌
# ▛▘▚▘▛▌▙▘▛▌▛▘▛▘
# ▄▌▞▖▌▌▛▖▙▌▌ ▙▖

#
# keybinding in <insert-year-here> :thongking:
#
# @type config
# @return void
# @param none
#

super + {h,j,k,l}
	waitron window_move {-20 0, 0 20, 0 -20, 20 0}

super + alt + {h,j,k,l}
	waitron window_resize {-20 0, 0 20, 0 -20, 20 0}

super + shift + {h,j,k,l}
	waitron window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift + alt + {h,j,k,l}
	waitron window_resize {-50 0, 0 50, 0 -50, 50 0}

super + alt + Escape
	waitron wm_quit 0

super + f
	waitron window_maximize

super + m
	waitron window_monocle

super + w
	waitron window_close

super + b
	waitron window_hor_maximize

super + v
	waitron window_ver_maximize

alt + Tab
	waitron window_cycle

alt + shift + Tab
	waitron window_rev_cycle

super + {_, shift +} {1-4}
	waitron {group_activate_specific,group_add_window} {1-4}

super + {Insert,Prior,Delete,Next,End}
	waitron window_snap {topleft,topright,bottomleft,bottomright,middle}

alt + {h,j,k,l}
	waitron window_cardinal_focus {left,down,up,right}

super + shift + r
	$HOME/.config/windowchef/windowchefrc

super + shift + Escape
	pkill -USR1 -x sxhkd && pkill -USR1 -x ruler 

XF86AudioMute
	pa-vol.sh --mute

XF86AudioRaiseVolume
	pa-vol.sh --up

XF86AudioLowerVolume
	pa-vol.sh --down

super + Return
	urxvt

super + p
	rofi -show run

super + Print
	chiisu
