#!/bin/sh
sudo sleep 0.1s || exit 10

if [[ -z $1 ]]; then
	echo "you must add a name for your xrdb preset.  exiting."
	exit 10
fi

_write_xrdb(){
cat <<EOF
! colorpreset
! name : $1
! generated from : pywal

! special
*.foreground:   ${foreground}
*.background:   ${background}
*.cursorColor:  ${cursor}

! black
*.color0:       ${color0}
*.color8:       ${color8}

! red
*.color1:       ${color1}
*.color9:       ${color9}

! green
*.color2:       ${color2}
*.color10:      ${color10}

! yellow
*.color3:       ${color3}
*.color11:      ${color11}

! blue
*.color4:       ${color4}
*.color12:      ${color12}

! magenta
*.color5:       ${color5}
*.color13:      ${color13}

! cyan
*.color6:       ${color6}
*.color14:      ${color14}

! white
*.color7:       ${color7}
*.color15:      ${color15}

rofi.color-window: ${background}, ${background}
rofi.color-active: ${background}, ${foreground}, ${background}, ${color4}, ${foreground}
rofi.color-normal: ${background}, ${foreground}, ${background}, ${color4}, ${foreground}
rofi.color-urgent: ${background}, ${foreground}, ${background}, ${color4}, ${foreground}
EOF
}

_write_lightdm(){
cat <<EOF
@define-colorbg ${background};
@define-colorbg_darken ${background};
@define-colorclear rgba(0, 0, 0, 0);
@define-colorbg_alt ${color1};
@define-colorfg ${foreground};
EOF
}



echo Cleaning pywal cache.
wal -cq

echo Generating colors.
wal -qensi "$(cat $HOME/.fehbg | awk -F\' '{print $6}' | grep .)"

source $HOME/.cache/wal/colors.sh
colordb="$HOME/.xrdb/$1"


echo Exporting colors.
mkdir -p $HOME/.xrdb/
_write_xrdb $1 > $colordb
sed -i -e "s;#include\(.*\);#include <$colordb>;g" $HOME/.Xresources


echo Reload Xresources Databases.
xrdb $HOME/.Xresources
xrdb -merge $HOME/.Xresources


echo Generating Tint2 preset.
cat $HOME/.cache/.tintyesterday | xargs tintyourday -p 


echo Generating Lightdm themes.
sudo cp "${wallpaper}" "/etc/lightdm/bg.jpg"
_write_lightdm | sudo tee /usr/share/themes/Yuune-lightdm/gtk-3.0/colors.css >/dev/null


echo Generating Dunst colorconfig.
sed -i -e "s;kground = \"\(.*\)\";kground = \"${background}\";g" $HOME/.config/dunst/dunstrc
sed -i -e "s;eground = \"\(.*\)\";eground = \"${color4}\";g" $HOME/.config/dunst/dunstrc

echo Reloading instance.
openbox --reconfigure
killall dunst
dunst -config $HOME/.config/dunst/dunstrc &

if [[ -z $(pidof tint2) ]]; then
	tint2 &
else
	pkill -USR1 -x tint2
fi

disown
